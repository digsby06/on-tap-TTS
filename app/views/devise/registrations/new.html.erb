<div class="container">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

<h1>Welcome to OnTap!</h1>
  <div class="form-inputs">
  	<%= f.input :username, required: true, autofocus: true, :input_html => {:style=> 'width: 30%'} %>
    <%= f.input :email, required: true, :input_html => {:style=> 'width: 30%'} %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), :input_html => {:style=> 'width: 30%'} %>
    <%= f.input :password_confirmation, required: true, :input_html => {:style=> 'width: 30%'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
