<!--SERVICE SECTION START-->
<section id="services" >
	<div class="container">
		<div class="row text-center header">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 animate-in" data-anim-type="fade-in-up">
				<h2>Brew News</h2>
					<hr />
			</div>
		</div>
<div class="row">
	<% @blogs.each do |blog| %>
		<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
			<div class="services-wrapper">
				<h1><%= link_to blog.post_title, blog %></h1>
				<p><%= link_to blog.entry[0..160], blog %> ... <%= link_to '[ READ MORE ]', blog %></p> 
			</div>
		</div>
	<% end %>
</div>
</div>
</section>

<!--SERVICE SECTION END-->

