<%= simple_form_for(@brewer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name , :input_html => {:style=> 'width: 40%'} %>
    <%= f.input :rating , :input_html => {:style=> 'width: 40%'}%>
    <%= f.input :location, :input_html => {:style=> 'width: 40%'} %>
    <%= f.input :phone_number, :input_html => {:style=> 'width: 40%'} %>
    <%= f.input :website, :input_html => {:style=> 'width: 40%'} %>
    <%= f.input :review, :input_html => {:style=> 'width: 40%'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
