<div class="row">
<% @blog_posts.each do |blog_post| %>
            <div class="col-md-4">
                <div class="services-wrapper">
                      <h3><%= blog_post.post_title %></h3>
                        <div class="panel-body">
                          <p>by <%= blog_post.user.username %></p>
                          <p><small><em><%= time_ago_in_words(blog_post.created_at) %> ago</em></small></p>
                          <p><%= blog_post.entry[0..160] %>... <%= link_to '[ READ MORE ]', blog_post %></p>
                        </div>
                      <%= link_to 'Show', blog_post %>
                      <%= link_to 'Edit', edit_blog_post_path(blog_post) %>
                      <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
            </div>
<% end %>
</div>
