<%= simple_form_for(@blog_post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :post_title %>
    <%= f.input :entry %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

  <div="hidden">
    <%= f.number_field :user_id, value: current_user.id %>
	</div>
<% end %>
